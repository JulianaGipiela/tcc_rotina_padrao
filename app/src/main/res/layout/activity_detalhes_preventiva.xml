<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/headerLayout"
            layout="@layout/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Posto "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNomeSite"
            android:textColor="#0079bf"
            android:textSize="36sp"
            android:textAllCaps="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:text="Regional "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@+id/nomePosto"
            android:layout_centerHorizontal="true"
            android:id="@+id/txtNomeEmissora"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data da Preventiva:"
            android:id="@+id/itemTitulo"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01. Inspeção Visual: Equipamentos com Alarmes"
            android:id="@+id/itemTitulo1"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Realizado"
            android:id="@+id/inspecaoCheck"
            android:buttonTint="#0079bf"
            android:textSize="16sp"
            android:textColor="@android:color/tertiary_text_light"
            android:checked="false"
            android:layout_margin="16dp"
            android:layout_column="4"
            android:layout_row="0"
            android:enabled="false" />




            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10. Itens para Compra e Pendêcias"
            android:id="@+id/itemTitulo10"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11. Responsavel"
            android:id="@+id/itemTitulo11"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="16dp"/>

</LinearLayout>
</ScrollView>
