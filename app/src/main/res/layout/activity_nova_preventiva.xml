<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/headerLayout"
            layout="@layout/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Posto "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNomeSite"
            android:textColor="#0079bf"
            android:textSize="36sp"
            android:textAllCaps="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:text="Regional "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@+id/nomePosto"
            android:layout_centerHorizontal="true"
            android:id="@+id/txtNomeEmissora"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01. Inspeção Visual: Equipamentos com Alarmes"
            android:id="@+id/itemTitulo1"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Realizado"
            android:id="@+id/inspecaoCheck"
            android:buttonTint="#0079bf"
            android:textSize="16sp"
            android:textColor="@android:color/tertiary_text_light"
            android:checked="false"
            android:layout_margin="16dp"
            android:layout_column="4"
            android:layout_row="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02. Limpeza Interna"
            android:id="@+id/itemTitulo2"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Realizado"
            android:id="@+id/limpezaCheck"
            android:buttonTint="#0079bf"
            android:textSize="16sp"
            android:textColor="@android:color/tertiary_text_light"
            android:checked="false"
            android:layout_margin="16dp"
            android:layout_column="4"
            android:layout_row="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03. Limpeza Externa"
            android:id="@+id/itemTitulo3"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Realizado"
            android:id="@+id/limpezaExternaCheck"
            android:buttonTint="#0079bf"
            android:textSize="16sp"
            android:textColor="@android:color/tertiary_text_light"
            android:checked="false"
            android:layout_margin="16dp"
            android:layout_column="4"
            android:layout_row="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04. Verificação geral de infraestrutura do posto"
            android:id="@+id/itemTitulo4"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:textStyle="bold" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Condição do Muro OK?"
            android:id="@+id/muroCheck"
            android:buttonTint="#0079bf"
            android:textSize="16sp"
            android:textColor="@android:color/tertiary_text_light"
            android:checked="false"
            android:layout_margin="16dp"
            android:layout_column="4"
            android:layout_row="0"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Condição do Abrigo OK?"
            android:id="@+id/abrigoCheck"
            android:buttonTint="#0079bf"
            android:textSize="16sp"
            android:textColor="@android:color/tertiary_text_light"
            android:checked="false"
            android:layout_margin="16dp"
            android:layout_column="4"
            android:layout_row="0"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Condição do Telhado OK?"
            android:id="@+id/telhadoCheck"
            android:buttonTint="#0079bf"
            android:textSize="16sp"
            android:textColor="@android:color/tertiary_text_light"
            android:checked="false"
            android:layout_margin="16dp"
            android:layout_column="4"
            android:layout_row="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05. Tensão: Concessionária de Energia"
            android:id="@+id/itemTitulo5"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_marginTop="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gridtensao"
            android:layout_below="@id/itemTitulo"
            android:layout_centerHorizontal="true"
            android:transitionGroup="false"
            android:layout_margin="16dp"
            android:touchscreenBlocksFocus="false">
            <TextView
                android:text="F1 F2"
                android:textColor="#0079bf"
                android:layout_column="0"
                android:layout_row="0"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="200px"
                android:background="#ffffffff"
                android:layout_height="60px"
                android:inputType="numberSigned|numberDecimal"
                android:ems="10"
                android:id="@+id/tensaof1f2"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_below="@+id/itemTitulo"
                android:layout_marginLeft="15px"
                android:layout_column="1"
                android:layout_row="0"/>
            <TextView
                android:text="V"
                android:layout_marginLeft="5px"
                android:layout_column="2"
                android:layout_row="0"
                android:textSize="16sp"
                android:layout_marginRight="30px"/>

            <TextView
                android:text="F2 F3"
                android:textColor="#0079bf"
                android:layout_column="3"
                android:layout_row="0"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="200px"
                android:background="#ffffffff"
                android:layout_height="60px"
                android:textCursorDrawable="@drawable/color_cursor"
                android:inputType="numberSigned|numberDecimal"
                android:ems="10"
                android:id="@+id/tensaof2f3"
                android:layout_below="@+id/itemTitulo"
                android:layout_marginLeft="15px"
                android:layout_column="4"
                android:layout_row="0"/>
            <TextView
                android:text="V"
                android:layout_marginLeft="5px"
                android:layout_column="5"
                android:layout_row="0"
                android:textSize="16sp"/>
            <TextView
                android:layout_row="1"/>
            <TextView
                android:text="F3 F1"
                android:textColor="#0079bf"
                android:layout_column="0"
                android:layout_row="2"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="200px"
                android:background="#ffffffff"
                android:layout_height="60px"
                android:inputType="numberSigned|numberDecimal"
                android:ems="10"
                android:id="@+id/tensaof3f1"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_below="@+id/itemTitulo"
                android:layout_marginLeft="15px"
                android:layout_column="1"
                android:layout_row="2"/>
            <TextView
                android:text="V"
                android:layout_marginLeft="5px"
                android:layout_column="2"
                android:layout_row="2"
                android:textSize="16sp"/>

            <TextView
                android:text="F N"
                android:textColor="#0079bf"
                android:layout_column="3"
                android:layout_row="2"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="200px"
                android:background="#ffffffff"
                android:layout_height="60px"
                android:textCursorDrawable="@drawable/color_cursor"
                android:inputType="numberSigned|numberDecimal"
                android:ems="10"
                android:id="@+id/tensaofn"
                android:layout_below="@+id/itemTitulo"
                android:layout_marginLeft="15px"
                android:layout_column="4"
                android:layout_row="2"/>
            <TextView
                android:text="V"
                android:layout_marginLeft="5px"
                android:layout_column="5"
                android:layout_row="2"
                android:textSize="16sp"/>
            <TextView
                android:layout_row="3"/>
            <TextView
                android:text="N T"
                android:textColor="#0079bf"
                android:layout_column="0"
                android:layout_row="4"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="200px"
                android:background="#ffffffff"
                android:layout_height="60px"
                android:textCursorDrawable="@drawable/color_cursor"
                android:inputType="numberSigned|numberDecimal"
                android:ems="10"
                android:id="@+id/tensaont"
                android:layout_below="@+id/itemTitulo"
                android:layout_marginLeft="15sp"
                android:layout_column="1"
                android:layout_row="4"/>
            <TextView
                android:text="V"
                android:layout_marginLeft="5px"
                android:layout_column="2"
                android:layout_row="4"
                android:textSize="16sp"/>
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06. Corrente Concessionária de Energia"
            android:id="@+id/itemTitulo6"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

        <GridLayout
            android:layout_marginTop="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gridcorrente"
            android:layout_below="@id/itemTitulo"
            android:layout_centerHorizontal="true"
            android:transitionGroup="false"
            android:layout_margin="16dp"
            android:touchscreenBlocksFocus="false">
            <TextView
                android:text="F1"
                android:textColor="#0079bf"
                android:layout_column="0"
                android:layout_row="0"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="200px"
                android:background="#ffffffff"
                android:layout_height="60px"
                android:textCursorDrawable="@drawable/color_cursor"
                android:inputType="numberSigned|numberDecimal"
                android:ems="10"
                android:id="@+id/correnteF1"
                android:layout_below="@+id/itemTitulo"
                android:layout_marginLeft="15px"
                android:layout_column="1"
                android:layout_row="0"/>
            <TextView
                android:text="A"
                android:layout_marginLeft="5px"
                android:layout_column="2"
                android:layout_row="0"
                android:textSize="16sp"
                android:layout_marginRight="30px"/>

            <TextView
                android:text="N"
                android:textColor="#0079bf"
                android:layout_column="3"
                android:layout_row="0"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="200px"
                android:background="#ffffffff"
                android:layout_height="60px"
                android:textCursorDrawable="@drawable/color_cursor"
                android:inputType="numberSigned|numberDecimal"
                android:ems="10"
                android:id="@+id/correnteN"
                android:layout_below="@+id/itemTitulo"
                android:layout_marginLeft="15px"
                android:layout_column="4"
                android:layout_row="0"/>
            <TextView
                android:text="A"
                android:layout_marginLeft="5px"
                android:layout_column="5"
                android:layout_row="0"
                android:textSize="16sp"/>
            <TextView
                android:layout_row="1"/>
            <TextView
                android:text="F2"
                android:textColor="#0079bf"
                android:layout_column="0"
                android:layout_row="2"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="200px"
                android:background="#ffffffff"
                android:layout_height="60px"
                android:textCursorDrawable="@drawable/color_cursor"
                android:inputType="numberSigned|numberDecimal"
                android:ems="10"
                android:id="@+id/correnteF2"
                android:layout_below="@+id/itemTitulo"
                android:layout_marginLeft="15px"
                android:layout_column="1"
                android:layout_row="2"/>
            <TextView
                android:text="A"
                android:layout_marginLeft="5px"
                android:layout_column="2"
                android:layout_row="2"
                android:textSize="16sp"/>

            <TextView
                android:text="T"
                android:textColor="#0079bf"
                android:layout_column="3"
                android:layout_row="2"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="200px"
                android:background="#ffffffff"
                android:layout_height="60px"
                android:textCursorDrawable="@drawable/color_cursor"
                android:inputType="numberSigned|numberDecimal"
                android:ems="10"
                android:id="@+id/correnteT"
                android:layout_below="@+id/itemTitulo"
                android:layout_marginLeft="15px"
                android:layout_column="4"
                android:layout_row="2"/>
            <TextView
                android:text="A"
                android:layout_marginLeft="5px"
                android:layout_column="5"
                android:layout_row="2"
                android:textSize="16sp"/>
            <TextView
                android:layout_row="3"/>
            <TextView
                android:text="F3"
                android:textColor="#0079bf"
                android:layout_column="0"
                android:layout_row="4"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="200px"
                android:background="#ffffffff"
                android:layout_height="60px"
                android:textCursorDrawable="@drawable/color_cursor"
                android:inputType="numberSigned|numberDecimal"
                android:ems="10"
                android:id="@+id/correnteF3"
                android:layout_below="@+id/itemTitulo"
                android:layout_marginLeft="15px"
                android:layout_column="1"
                android:layout_row="4"/>
            <TextView
                android:text="A"
                android:layout_marginLeft="5px"
                android:layout_column="2"
                android:layout_row="4"
                android:textSize="16sp"/>
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07. No-Break (leitura nos terminais)"
            android:id="@+id/itemTitulo7"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

        <GridLayout
            android:layout_marginTop="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gridnobreak"
            android:layout_margin="16dp"
            android:layout_below="@id/itemTitulo"
            android:layout_centerHorizontal="true"
            android:transitionGroup="false"
            android:touchscreenBlocksFocus="false">
            <TextView
                android:text="Frequência"
                android:textColor="#0079bf"
                android:layout_column="0"
                android:layout_row="0"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="200px"
                android:background="#ffffffff"
                android:layout_height="60px"
                android:textCursorDrawable="@drawable/color_cursor"
                android:inputType="numberSigned|numberDecimal"
                android:ems="10"
                android:id="@+id/frequencia"
                android:layout_below="@+id/itemTitulo"
                android:layout_marginLeft="15px"
                android:layout_column="1"
                android:layout_row="0"/>
            <TextView
                android:text="Hz"
                android:layout_marginLeft="5px"
                android:layout_column="2"
                android:layout_row="0"
                android:textSize="16sp"
                android:layout_marginRight="30px"/>

            <TextView
                android:layout_row="1"/>
            <TextView
                android:text="Tensão Banco"
                android:textColor="#0079bf"
                android:layout_column="0"
                android:layout_row="2"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="200px"
                android:background="#ffffffff"
                android:layout_height="60px"
                android:textCursorDrawable="@drawable/color_cursor"
                android:inputType="numberSigned|numberDecimal"
                android:ems="10"
                android:id="@+id/tensaobanco"
                android:layout_below="@+id/itemTitulo"
                android:layout_marginLeft="15px"
                android:layout_column="1"
                android:layout_row="2"/>
            <TextView
                android:text="V (DC)"
                android:layout_marginLeft="5px"
                android:layout_column="2"
                android:layout_row="2"
                android:textSize="16sp"/>
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08. Teste de Funcionamento do No-Break"
            android:id="@+id/itemTitulo8"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:textStyle="bold" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Realizado"
            android:id="@+id/nobreakCheck"
            android:buttonTint="#0079bf"
            android:textSize="16sp"
            android:textColor="@android:color/tertiary_text_light"
            android:checked="false"
            android:layout_margin="16dp"
            android:layout_column="4"
            android:layout_row="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09. Verificação de Sinal com a TV"
            android:id="@+id/itemTitulo9"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:textStyle="bold" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Condição do Muro OK?"
            android:id="@+id/sinalCheck"
            android:buttonTint="#0079bf"
            android:textSize="16sp"
            android:textColor="@android:color/tertiary_text_light"
            android:checked="false"
            android:layout_margin="16dp"
            android:layout_column="4"
            android:layout_row="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10. Itens para Compra e Pendêcias"
            android:id="@+id/itemTitulo10"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edtDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data"
            android:inputType="text"
            android:layout_margin="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11. Responsavel"
            android:id="@+id/itemTitulo11"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtResponsavel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Responsável"
            android:inputType="text"
            android:layout_margin="16dp"/>



        <Button
            android:id="@+id/btnSavePreventiva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salvar e Finalizar"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>



    </LinearLayout>
</ScrollView>
