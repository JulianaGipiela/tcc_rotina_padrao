<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Inclui o cabeçalho -->
    <include
        android:id="@+id/headerLayout"
        layout="@layout/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Posto "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNomeSite"
        android:textColor="#0079bf"
        android:textSize="36sp"
        android:textAllCaps="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:text="Regional "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/nomePosto"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtNomeEmissora"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"/>


    <!-- Botão "Última Preventiva" -->
    <Button
        android:id="@+id/btnUltimaPreventiva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Última Preventiva"
        android:layout_margin="16dp"/>

    <!-- Botão "Nova Preventiva" -->
    <Button
        android:id="@+id/btnNovaPreventiva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nova Preventiva"
        android:layout_margin="16dp"/>

</LinearLayout>
